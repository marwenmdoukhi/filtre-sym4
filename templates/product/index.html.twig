{% extends 'base.html.twig' %}

{% block title %}Tous nos Produit{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-3">
            {% include  "product/_filtre.html.twig" with {form:form} only %}

        </div>
        <div class="col-md-9">
            <div class="grid">

                {% for product in products %}

                    {% include  "product/_card.html.twig" with {product:product} only %}

                {% endfor %}
            </div>
            <div class="mt-4">

                {{ knp_pagination_render(products) }}
            </div>
        </div>
    </div>

</div>

{% endblock %}
